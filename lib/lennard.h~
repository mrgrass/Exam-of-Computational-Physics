#include <math.h>

//===============================================================================================================================
// PROTOTIPI
//===============================================================================================================================

// Funzione che riempie "vettore" con una mesh di Lennard-Jones
int lennard_genera(double xmin, double xmax, int N, double &vettore);

// Funzione che restituisce la V(x)
double lennard_punto(double x);


//===============================================================================================================================
// DEFINIZIONI
//===============================================================================================================================

// Funzione che riempie "vettore" con una mesh di Lennard-Jones
int lennard_genera(double xmin, double xmax, int N, double &vettore)
{
	if(xmin==xmax) return -1;

	//inverti se gli estremi sono sbagliati
	if(xmin > xmax)
	{
		double temp=xmin;
		xmin=xmax;
		xmax=temp;
	}

	//riempi la mesh
	double passo = (xmax - xmin) / (double)(N-1);
	double x=xmin;
	for(int i=0; i<N;)	
	{
		vettore[i]=4*(pow(x,-12)-pow(x,-6));		

		x+=passo;
		i++;
	}

	return 0;	
}

// Funzione che restituisce la V(x)
double lennard_punto(double x)
{
}

